<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".AvailableRidesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Rides"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.020"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ride1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/edittext_bg"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane D."
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@id/profile1"
                app:layout_constraintTop_toTopOf="@id/profile1"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/car1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda Civic"
                android:textColor="#555555"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/name1"
                app:layout_constraintTop_toBottomOf="@id/name1"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/seats1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats: 3"
                android:textColor="#777777"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/name1"
                app:layout_constraintTop_toBottomOf="@id/car1"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12"
                android:textColor="#00796B"
                android:backgroundTint="#00000000"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ride2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/edittext_bg"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ride1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John S."
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@id/profile2"
                app:layout_constraintTop_toTopOf="@id/profile2"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/car2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand Vitara"
                android:textColor="#555555"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/name2"
                app:layout_constraintTop_toBottomOf="@id/name2"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/seats2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 seats available"
                android:textColor="#777777"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/name2"
                app:layout_constraintTop_toBottomOf="@id/car2"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15"
                android:textColor="#00796B"
                android:backgroundTint="#00000000"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ride3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/edittext_bg"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ride2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emily W."
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@id/profile3"
                app:layout_constraintTop_toTopOf="@id/profile3"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/car3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardillac Ascalade"
                android:textColor="#555555"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/name3"
                app:layout_constraintTop_toBottomOf="@id/name3"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/seats3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats: 3"
                android:textColor="#777777"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/name3"
                app:layout_constraintTop_toBottomOf="@id/car3"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10"
                android:textColor="#00796B"
                android:backgroundTint="#00000000"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ride4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/edittext_bg"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ride3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith."
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@id/profile4"
                app:layout_constraintTop_toTopOf="@id/profile4"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/car4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swift Desire"
                android:textColor="#555555"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/name4"
                app:layout_constraintTop_toBottomOf="@id/name4"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/seats4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats: 4"
                android:textColor="#777777"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/name4"
                app:layout_constraintTop_toBottomOf="@id/car4"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$13"
                android:textColor="#00796B"
                android:backgroundTint="#00000000"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ride5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/edittext_bg"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ride4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thomas T."
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@id/profile5"
                app:layout_constraintTop_toTopOf="@id/profile5"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/car5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volvo RAV4"
                android:textColor="#555555"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/name5"
                app:layout_constraintTop_toBottomOf="@id/name5"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/seats5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 seats available"
                android:textColor="#777777"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/name5"
                app:layout_constraintTop_toBottomOf="@id/car5"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/price5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$17"
                android:textColor="#00796B"
                android:backgroundTint="#00000000"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>